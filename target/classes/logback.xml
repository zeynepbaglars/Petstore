<configuration>

    <!-- Root logger seviyesini 'error' olarak ayarla -->
    <root level="error">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Konsol için appender tanımla -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

</configuration>
